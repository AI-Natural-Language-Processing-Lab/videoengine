@model Jugnoon.Models.BreadViewModel
@if (Model.BreadItems != null && Model.BreadItems.Count > 0)
{
    <div class="m-t-5 m-b-5">
        <ol class="breadcrumb">
            @{
                for (int i = 0; i < Model.BreadItems.Count; i++)
                {

                    if (i == Model.BreadItems.Count - 1)
                    {
                        <li class="breadcrumb-item active">@Model.BreadItems[i].title</li>
                    }
                    else
                    {
                        <li class="breadcrumb-item"><a href="@Model.BreadItems[i].url">@Model.BreadItems[i].title</a></li>
                    }
                }
            }
        </ol>
    </div>
}
