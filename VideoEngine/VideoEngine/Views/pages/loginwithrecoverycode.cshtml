@model Jugnoon.Models.LoginWithRecoveryCodeViewModel
@inject IStringLocalizer<GeneralResource> GeneralResource

@{
    ViewData["Title"] = GeneralResource["_recovery_code_verification"].Value;
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card m-b-40 m-t-40">
            <div class="card-header">
                <h3>@GeneralResource["_recovery_code_verification"].Value</h3>
            </div>
            <div class="card-body">
                <p>
                    @GeneralResource["_recovery_code_verification_msg"].Value
                </p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RecoveryCode"></label>
                        <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">@GeneralResource["_login"].Value</button>
                </form>
            </div>
        </div>


    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

