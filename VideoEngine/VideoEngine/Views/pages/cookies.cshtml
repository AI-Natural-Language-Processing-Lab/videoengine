
@inject IStringLocalizer<GeneralResource> GeneralResource

@inject Microsoft.Extensions.Options.IOptions<Jugnoon.Settings.General> generalSettings
@{

    var _bModel = new List<BreadItem>();
    _bModel.Add(new BreadItem()
    {
        title = GeneralResource["_home"].Value,
        url = Config.GetUrl()
    });
    _bModel.Add(new BreadItem()
    {
        title = GeneralResource["_security"].Value,
        url = Config.GetUrl("security")
    });
    _bModel.Add(new BreadItem()
    {
        title = GeneralResource["_cookies"].Value,
        isActive = true
    });
    var BreadCrumbViewModel = new BreadViewModel()
    {
        BreadItems = _bModel
    };
}
<partial name="~/Views/Shared/_BreadCrumb.cshtml" model="BreadCrumbViewModel" />


<div class="row">
    <div class="col-md-8">
        <h2 class="m-b-10">@GeneralResource["_cookies"].Value</h2>
        <h3>What are cookies?</h3>
        <p>
            A cookie is a string of information that a website stores on a visitor’s computer,
            and that the visitor’s browser provides to the website each time the visitor returns.
        </p>

        <h3>How does @generalSettings.Value.website_title use cookies?</h3>
        <p>
            We use cookies and other technologies to ensure everyone who uses @generalSettings.Value.website_title
            has the best possible experience. Cookies are used to identify and track visitors,
            their usage of @generalSettings.Value.website_title website, and their website access preferences.
        </p>

        <h3>How do I disable cookies?</h3>
        <p>
            @generalSettings.Value.website_title visitors who do not wish to have cookies placed on their computers
            should set their browsers to refuse cookies before using @generalSettings.Value.website_title website,
            with the drawback that certain features of the @generalSettings.Value.website_title website may not function properly
            without the aid of cookies.
        </p>

        <small>
            Effective as of 01-01-2020
        </small>
    </div>
    <div class="col-md-4">
        <ul>
            <li><a href="/terms-of-use">@GeneralResource["_terms_of_service"].Value</a></li>
            <li><a href="/privacy">@GeneralResource["_privacy_policy"].Value</a></li>
        </ul>
        <hr />
        <ul>
            <li><a href="~/security">@GeneralResource["_security"].Value</a></li>
            <li><a href="/gdpr">@GeneralResource["_gdpr_faq"].Value</a></li>
            <li><a href="/cookies">@GeneralResource["_cookies"].Value</a></li>
            <li><a href="/thirdparties">@GeneralResource["_thirdparty_policy"].Value</a></li>
        </ul>
    </div>
</div>

